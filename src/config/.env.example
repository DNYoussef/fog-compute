# Fog-Compute Centralized Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================

# BetaNet Server Settings
FOG_BETANET_HOST=127.0.0.1
FOG_BETANET_PORT=9000
FOG_BETANET_API_PORT=8443
FOG_BETANET_SERVER_HOST=127.0.0.1
FOG_BETANET_SERVER_PORT=9000

# BetaNet Peer Settings
FOG_BETANET_MAX_PEERS=100
FOG_BETANET_DISCOVERY_INTERVAL=60
FOG_BETANET_HEARTBEAT_INTERVAL=30
FOG_BETANET_RELAY_ENABLED=true
FOG_BETANET_RELAY_LOTTERY=true

# Redis Settings
FOG_REDIS_HOST=localhost
FOG_REDIS_PORT=6379
FOG_REDIS_DB=0
FOG_REDIS_PASSWORD=
FOG_REDIS_MAX_CONNECTIONS=50
FOG_REDIS_SOCKET_TIMEOUT=5
FOG_REDIS_CONNECT_TIMEOUT=5
FOG_REDIS_DECODE_RESPONSES=true

# API Gateway Settings
FOG_API_HOST=localhost
FOG_API_PORT=8080

# BitChat Settings
FOG_BITCHAT_HOST=localhost
FOG_BITCHAT_PORT=8000

# Coordinator Settings
FOG_COORDINATOR_PORT=8080

# Connection Settings
FOG_CONNECTION_TIMEOUT=30
FOG_REQUEST_TIMEOUT=60
FOG_MAX_RETRIES=3

# ============================================================================
# TOKENOMICS CONFIGURATION
# ============================================================================

# Reward Settings
FOG_REWARD_RATE=10.0
FOG_STAKING_MULTIPLIER=1.5

# Performance Bonuses
FOG_PERFORMANCE_THRESHOLD=0.95
FOG_PERFORMANCE_BONUS=0.2

# Transfer Settings
FOG_TRANSFER_FEE=0.01
FOG_MAX_TRANSFER=10000.0

# Thresholds
FOG_FAILURE_THRESHOLD=0.05
FOG_MIN_BALANCE=100.0

# ============================================================================
# PRIVACY & CIRCUIT CONFIGURATION
# ============================================================================

# Circuit Hop Settings
FOG_MIN_CIRCUIT_HOPS=3
FOG_MAX_CIRCUIT_HOPS=7
FOG_DEFAULT_CIRCUIT_HOPS=3

# Circuit Limits
FOG_MAX_CIRCUITS=50
FOG_MAX_CIRCUITS_PER_LEVEL=10

# Circuit Lifetime
FOG_CIRCUIT_LIFETIME=30

# Key Derivation Settings
FOG_KEY_DERIVATION_LENGTH=64
FOG_KEY_SALT=fog-onion-v1
FOG_KEY_INFO=circuit-keys

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Task Management
FOG_MAX_CONCURRENT_TASKS=100
FOG_TASK_QUEUE_SIZE=1000
FOG_WORKER_THREADS=4

# Connection Pools
FOG_CONNECTION_POOL_SIZE=20

# Cache Settings
FOG_CACHE_TTL=300
FOG_CACHE_MAX_SIZE=1000

# Batch Processing
FOG_BATCH_SIZE=100
FOG_CHUNK_SIZE=1024

# ============================================================================
# DEPLOYMENT PROFILES
# ============================================================================

# Uncomment one of the following profiles for quick setup

# Development Profile (default)
# - All services on localhost
# - Lower limits for testing
# - No authentication required
# All defaults are already configured for development

# Production Profile
# Uncomment and customize for production deployment:
# FOG_BETANET_HOST=betanet.production.internal
# FOG_REDIS_HOST=redis.production.internal
# FOG_REDIS_PASSWORD=your-secure-password
# FOG_MAX_CONCURRENT_TASKS=500
# FOG_CONNECTION_POOL_SIZE=100

# Staging Profile
# Uncomment and customize for staging environment:
# FOG_BETANET_HOST=betanet.staging.internal
# FOG_REDIS_HOST=redis.staging.internal
# FOG_MAX_CONCURRENT_TASKS=200

# ============================================================================
# NOTES
# ============================================================================

# 1. Boolean values: use 'true', '1', 'yes', 'on' for True
#                    use 'false', '0', 'no', 'off' for False

# 2. Integer values: must be valid integers (no decimals)

# 3. Float values: can include decimal points (e.g., 10.5)

# 4. String values: no quotes needed

# 5. Empty values: will use defaults from config module

# 6. Invalid values: will fall back to defaults with warning

# ============================================================================
# SECURITY REMINDERS
# ============================================================================

# WARNING: Never commit .env file with production secrets to version control!
# Add .env to .gitignore

# Use strong passwords for production Redis instances
# Rotate credentials regularly
# Use network isolation for production services
# Enable TLS/SSL for production connections

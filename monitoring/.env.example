# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=changeme

# SMTP Configuration (for email alerts)
SMTP_HOST=smtp.gmail.com:587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=alerts@fogcompute.dev

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# PagerDuty Integration
PAGERDUTY_SERVICE_KEY=your-pagerduty-service-key

# Alert Recipients
ALERT_EMAIL=ops@fogcompute.dev

# Service URLs
BETANET_API_URL=http://betanet:8080
BITCHAT_WS_URL=ws://bitchat:3001

# Sentry Error Tracking
SENTRY_DB_PASSWORD=secure-password
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Optional: Remote Prometheus Write
# REMOTE_WRITE_USER=prometheus
# REMOTE_WRITE_PASSWORD=secret

# Optional: S3 for Loki Storage (HA setup)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET=loki-storage
# S3_REGION=us-east-1